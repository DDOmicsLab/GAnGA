current_directory = os.getcwd()
db_dir = os.path.join(current_directory,"databases")
tools_dir = os.path.join(current_directory,"tools")

rule all:
    input: 
                expand("flags/{name}.done",
                    name=["chopper_env", "ezaai_env", "fastani_env", "flye_env", "genovi_env", "quarto_env", "racon_env", "ragtag_env", "trimmomatic_env", "unicycler_env", "mlst_env", "checkm_env", "bakta_env", "rgi_env", "phigaro_env", "mobileogdb_env", "crispr_env", "panvita_env", "antismash_env", "pocp_env"]),

rule chopper_env:
    output: "flags/chopper_env.done"
    conda: "envs/chopper.yaml"
    shell: "touch {output}"

