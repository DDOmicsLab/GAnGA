rule Quarto_report:
    input:
        absolute_paths=os.path.join(data_dir, "{sample}/19_report/{sample}_absolute_paths.txt")
    output:
        html_report=os.path.join(data_dir,"{sample}/19_report/{sample}_report.html"),
    params:
        output_dir=os.path.join(data_dir,"{sample}/19_report"),
        sample="{sample}",
        cd=current_directory
    log:
        os.path.join(data_dir,"{sample}/logs/report.log")
    threads:
        30
    shell:
        """
        cp -r hybrid_quarto_scripts/ {params.output_dir}
        cd {params.output_dir}/hybrid_quarto_scripts/
        cp {input.absolute_paths} ./
        mv {params.sample}_absolute_paths.txt absolute_paths.txt
        quarto render
        cp -r report_files/* {params.output_dir}
        rm -rf report_files/*
        cd {params.output_dir}
        cp index.html {params.sample}_report.html
        rm -rf hybrid_quarto_scripts/
        cd {params.cd}
        """
