        30
        
    conda:
        "envs/probiopred.yaml"
    shell:
        """
	cd {params.tools_dir}
        rgi main -i {input.pilon_assembly} -o {params.prefix} {params.options} -n {threads} &> {log}
        sed 's/\t\t/\tn\/a\t/g' {output.txt} > {output.tsv}
       
        sed -i 's/#/;/g' {output.tsv}
	cd {params.cd}
        """
    
