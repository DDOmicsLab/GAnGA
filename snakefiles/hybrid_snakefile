rule validate_taxa:
    input:
        tsv_file=os.path.join(current_directory, "scripts/valid_taxa.tsv")
    output:
        touch(os.path.join(data_dir, "{sample}/logs/{sample}_validate_taxa.done"))
    params:
        genus=lambda wildcards:config["samples"][wildcards.sample]["genus"],
        species=lambda wildcards:config["samples"][wildcards.sample]["species"],
    shell:
        """
        if grep -Fxq "{params.genus}\t{params.species}" {input.tsv_file}; then
            echo "✅ Valid genus/species: {params.genus} {params.species}";
            touch {output};
        else
            echo "❌ ERROR: Invalid genus/species '{params.genus} {params.species}' not found. May be a spelling error!" >&2;
            exit 1;
        fi
        """ 

rule FastQC_pretrim:
    input:  
        r1=lambda wildcards:config["samples"][wildcards.sample]["R1"],
        r2=lambda wildcards:config["samples"][wildcards.sample]["R2"],
    output:
        directory(os.path.join(data_dir, "{sample}/00_fastqc_pretrim")),
    params:
        options=lambda wildcards:config["parameters"]["fastqc"],
    log:
        os.path.join(data_dir,"{sample}/logs/fastqc.log"),
    threads:
        20
    shell:
        """
        mkdir -p {output}
        fastqc -o {output} --noextract -f fastq {input.r1} {input.r2} {params.options} -t {threads} &> {log}
        """

rule Trimmomatic:
    input:
        r1=lambda wildcards:config["samples"][wildcards.sample]["R1"],
        r2=lambda wildcards:config["samples"][wildcards.sample]["R2"],
        valid_taxa=os.path.join(data_dir, "{sample}/logs/{sample}_validate_taxa.done"),
    output:
        forward_paired=os.path.join(data_dir, "{sample}/01_trimmed_reads/forward_paired.fastq.gz"),
        forward_unpaired=os.path.join(data_dir, "{sample}/01_trimmed_reads/forward_unpaired.fastq.gz"),
        reverse_paired=os.path.join(data_dir, "{sample}/01_trimmed_reads/reverse_paired.fastq.gz"),
        reverse_unpaired=os.path.join(data_dir, "{sample}/01_trimmed_reads/reverse_unpaired.fastq.gz"),
    params:
        options=lambda wildcards:config["parameters"]["Trimmomatic"],
    conda:
        "envs/trimmomatic.yaml"
    log:
        os.path.join(data_dir,"{sample}/logs/trimmomatic.log"),
    threads:
        10
    shell:
        """
         trimmomatic PE -threads {threads} -phred33 {input.r1} {input.r2} {output.forward_paired} {output.forward_unpaired} {output.reverse_paired} {output.reverse_unpaired} {params.options} &> {log}
        """

rule FastQC_posttrim:
    input:  
        r1=os.path.join(data_dir, "{sample}/01_trimmed_reads/forward_paired.fastq.gz"),
        r2=os.path.join(data_dir, "{sample}/01_trimmed_reads/reverse_paired.fastq.gz"),
    output:
        directory(os.path.join(data_dir, "{sample}/00_fastqc_posttrim")),
    params:
        options=lambda wildcards:config["parameters"]["fastqc"],
    log:
        os.path.join(data_dir,"{sample}/logs/fastqc.log"),
    threads:
        20
    shell:
        """
        mkdir -p {output}
        fastqc -o {output} --noextract -f fastq {input.r1} {input.r2} {params.options} -t {threads} &> {log}
        """

rule Chopper:
    input:
        raw_reads=lambda wildcards: config["samples"][wildcards.sample]["L1"],
    output:
        os.path.join(data_dir, "{sample}/01_chopper/filtered.fastq"),
    params:
        quality=config["parameters"]["Chopper"]["quality"],
        min_length=config["parameters"]["Chopper"]["min_length"],
        outdir=os.path.join(data_dir, "{sample}/01_chopper")
    log:
        os.path.join(data_dir,"{sample}/logs/chopper.log")
    threads:
        20
    conda:
        "envs/chopper.yaml"
    shell:
        """
        chopper --quality {params.quality} --minlength {params.min_length} -i {input.raw_reads} > {output} 2> {log}
        """

rule Referencereformat:
    input:
        reference=lambda wildcards:config["samples"][wildcards.sample]["reference_fasta"]
    output:
        os.path.join(data_dir,"{sample}/01_trimmed_reads/modified_reference.fasta"),
    params:
        temp_fasta=os.path.join(data_dir,"{sample}/01_trimmed_reads/temp_reference.fasta"),
    shell:
        """
        touch {output}
        sed  's/|/_/g' {input.reference} > {params.temp_fasta}
        count=0

        
        
            while IFS= read -r line
            do
                if [[ $line == ">"* ]]; then
                    count=$((count + 1))
                    echo "> contig_$count" >> {output}
                else
                    echo "$line" >> {output}
                fi
            done < {params.temp_fasta}
        """

rule Flye:
    input:
        filtered_reads= os.path.join(data_dir, "{sample}/01_chopper/filtered.fastq"),
    output:
        os.path.join(data_dir, "{sample}/02_flye/assembly.fasta"),
    params:
        outdir=os.path.join(data_dir,"{sample}/02_flye"),
        sequencing_type= config["parameters"]["Flye"]["sequencing_type"], # type: ignore
        options=lambda wildcards:config["parameters"]["Flye"]["options"],
    log:
        os.path.join(data_dir,"{sample}/logs/flye.log"),
    threads:
        20
    conda:
        "envs/flye.yaml"
    shell:
        """
        mkdir -p {params.outdir}
        flye {params.sequencing_type} {input.filtered_reads} --out-dir {params.outdir} {params.options} --scaffold 2> {log}
        """

rule CheckM_post_assembly:
    input:
        assembly=os.path.join(data_dir, "{sample}/02_flye/assembly.fasta"),
    	flag=os.path.join(current_directory, "flags/checkm.done")
    output:
        log=os.path.join(data_dir,"{sample}/05_checkm/post_assembly/checkm.log"),
        summary=os.path.join(data_dir,"{sample}/05_checkm/post_assembly/ssu_summary.tsv"),
        ssu_archaea=os.path.join(data_dir,"{sample}/05_checkm/post_assembly/ssu.archaea.txt"),
        ssu_bacteria=os.path.join(data_dir,"{sample}/05_checkm/post_assembly/ssu.bacteria.txt"),
        ssu=os.path.join(data_dir,"{sample}/05_checkm/post_assembly/ssu.fna"),
        fna=os.path.join(data_dir, "{sample}/02_flye/assembly.fna"),
        completeness_table=os.path.join(data_dir,"{sample}/05_checkm/post_assembly/table.txt"),
    params:
        assembly_dir=os.path.join(data_dir, "{sample}/02_flye/"),
        outdir=os.path.join(data_dir,"{sample}/05_checkm/post_assembly"),
        db_path=os.path.join(db_dir,"checkm"),
        options=lambda wildcards:config["parameters"]["checkm"]["options"],
    log:
        os.path.join(data_dir,"{sample}/logs/checkm_post_assembly.log")
    threads:
        20
    conda:
        "envs/checkm.yaml"
    shell:
        """
        export CHECKM_DATA_PATH={params.db_path}
        cp {input.assembly} {output.fna}
        checkm lineage_wf {params.assembly_dir} {params.outdir} -t {threads} &> {output.completeness_table}
        sed -i '1,34d' {output.completeness_table}
        checkm ssu_finder {input.assembly} -x fasta {params.assembly_dir} {params.outdir} {params.options} -t {threads} &> {log}
        """

