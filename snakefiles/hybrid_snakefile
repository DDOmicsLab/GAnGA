rule BWA_Samtools:
    input:
        r1=os.path.join(data_dir, "{sample}/01_trimmed_reads/forward_paired.fastq.gz"),
        r2=os.path.join(data_dir, "{sample}/01_trimmed_reads/reverse_paired.fastq.gz"),
        flye_assembly=os.path.join(data_dir, "{sample}/02_flye/assembly.fasta"),
    output:
        bwa_bam=os.path.join(data_dir, "{sample}/03_bwa/{sample}.bam")
    params:
        outdir=os.path.join(data_dir, "{sample}/03_bwa"),
    log:
       os.path.join(data_dir,"{sample}/logs/bwa_samtools.log")
    threads:
        40
    shell:
       """
        bwa index {input.flye_assembly} &> {log}
        bwa mem -t {threads} {input.flye_assembly} {input.r1} {input.r2}| samtools view -@ 10 -b - | samtools sort -@ 10 -o {output.bwa_bam} - &> {log}
        samtools index {output.bwa_bam} &> {log}

        """

rule Pilon:
    input:
        bwa_bam=os.path.join(data_dir, "{sample}/03_bwa/{sample}.bam"),
        flye_assembly=os.path.join(data_dir, "{sample}/02_flye/assembly.fasta"),
    output:
        assembly=os.path.join(data_dir, "{sample}/04_pilon/{sample}.fasta"),
        final=os.path.join(data_dir, "{sample}/04_pilon/{sample}_final.fasta"),
    params:
        outdir=os.path.join(data_dir, "{sample}/04_pilon"),
        name="{sample}",
        memory=lambda wildcards:config["parameters"]["Pilon"]["memory"],
        temp_fasta=os.path.join(data_dir, "{sample}/04_pilon/temp.fasta"),
        sequencer=lambda wildcards:config["parameters"]["Pilon"]["sequencer"],
        options=lambda wildcards:config["parameters"]["Pilon"]["options"]
    log:
        os.path.join(data_dir,"{sample}/logs/pilon.log")
    threads:
        40

    shell:
        """
        pilon --threads {threads} --genome {input.flye_assembly} --{params.sequencer} {input.bwa_bam} --outdir {params.outdir} --output {params.name} -Xmx{params.memory} &> {log}
        sed 's/|/_/g' {output.assembly} > {output.final}
        count=0


        
        
        while IFS= read -r line
        do
            if [[ $line == ">"* ]]; then
                count=$((count + 1))
                echo ">contig_$count" >> {params.temp_fasta}
            else
                echo "$line" >> {params.temp_fasta}
            fi
        done < {output.final}
        rm {output.final}
        mv {params.temp_fasta} {output.final}
        """

rule Prodigal:
    input:
        os.path.join(data_dir, "{sample}/04_pilon/{sample}_final.fasta"),
    output:
        genes=os.path.join(data_dir, "{sample}/08_prodigal/{sample}_genes.gbk"),
        proteins=os.path.join(data_dir, "{sample}/08_prodigal/{sample}_proteins.faa"),
        gene_seq=os.path.join(data_dir, "{sample}/08_prodigal/{sample}_gene_sequences"),
        tsv_file=os.path.join(data_dir,"{sample}/08_prodigal/{sample}.tsv")
    log:
        os.path.join(data_dir,"{sample}/logs/prodigal.log")
    threads:
        30

    shell:
        """
        prodigal  -i {input} -o {output.genes} -a {output.proteins} -d {output.gene_seq} -s {output.tsv_file} &> {log}
        """


rule Bakta:
    input:
        pilon_assembly=os.path.join(data_dir, "{sample}/04_pilon/{sample}_final.fasta"),
        flag=os.path.join(current_directory, "flags/bakta_db.done")
    output:
        os.path.join(data_dir, "{sample}/09_bakta/{sample}_bakta.faa"),
        os.path.join(data_dir, "{sample}/09_bakta/{sample}_bakta.ffn"),
        os.path.join(data_dir, "{sample}/09_bakta/{sample}_bakta.fna"),
        os.path.join(data_dir, "{sample}/09_bakta/{sample}_bakta.gbff"),
        os.path.join(data_dir, "{sample}/09_bakta/{sample}_bakta.gff3"),
        os.path.join(data_dir, "{sample}/09_bakta/{sample}_bakta.png"),
        os.path.join(data_dir, "{sample}/09_bakta/{sample}_bakta.svg"),
        os.path.join(data_dir, "{sample}/09_bakta/{sample}_bakta.tsv"),
        os.path.join(data_dir, "{sample}/09_bakta/{sample}_bakta.txt"),
    params:
        prefix="{sample}_bakta",
        genus=lambda wildcards:config["samples"][wildcards.sample]["genus"],
        species=lambda wildcards:config["samples"][wildcards.sample]["species"],
        outdir=os.path.join(data_dir, "{sample}/09_bakta"),
        db_path=os.path.join(db_dir,"bakta_db/db"),
        options=lambda wildcards:config["parameters"]["Bakta"]["options"],
    log:
        os.path.join(data_dir,"{sample}/logs/bakta.log")
    threads:
        30
    conda:
        "envs/bakta.yaml"
    shell:
        """
        bakta {input.pilon_assembly} --db {params.db_path} --prefix {params.prefix} --genus {params.genus} --species {params.species} --output {params.outdir} {params.options} -t {threads} &> {log}

        """

rule Barrnap:
    input:
        os.path.join(data_dir, "{sample}/04_pilon/{sample}_final.fasta"),
    output:
        os.path.join(data_dir, "{sample}/10_barrnap/{sample}_rrna.fa"),
    params:
        options=lambda wildcards:config["parameters"]["Barrnap"]
    log:
        os.path.join(data_dir,"{sample}/logs/barrnap.log")
    threads:
        20
    shell:
        """
        barrnap -o {output} <{input} {params.options} --threads {threads} &> {log}
        """


